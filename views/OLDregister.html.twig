{% extends 'base.html.twig' %}
{% block body %}
	<div class="container">
		<div class="contact">
			<h2>REGISTER</h2>
			<div class="contact-in">
    			<div class=" col-md-3 contact-right"></div>
    			<div class=" col-md-9 contact-left">
    				<form name="register" action="/register.html" method="post">
    					<div style="margin: 2em 0 1em 0;">
    						<h3>Login informations</h3>
    					</div>
    					
    					<div>
    						<span>Email&nbsp;&nbsp;&nbsp;</span>
    						<input name="email" type="text" class="textbox"  />
    					</div>
    					<div>
    						<label style="font-weight: normal;"><span>Password : </span></label>
    						<input name="password" type="password" class="textbox" style="margin-left:6% ;" />
    					</div>
    					<div>
    						<label style="font-weight: normal;"><span>Repeat password : </span></label>
    						<input name="reppassword" type="password" class="textbox"  />
    					</div>
    					<div>
    						<span>Username</span>
    						<input name="username" type="text" class="textbox"  />
    					</div>		
    					<div style="margin: 2em 0 1em 0;">
    						<h3>Personal informations</h3>
    					</div>	
    					<div>
    						<span>Civility</span>
    						<input name="civilite" type="radio" value="Monsieur" > Mister&nbsp;&nbsp;&nbsp;
    						<input name="civilite" type="radio" value="Madame" > Miss
    					</div>
    					<div>
    						<span>Firstname</span>
    						<input name="prenom" type="text" class="textbox" />
    					</div>
    					<div>
    						<span>Lastname</span>
    						<input name="nom" type="text" class="textbox" />
    					</div>
    					<div>
    						<span>Tel</span>
    						<input name="telephone" type="text" class="textbox"  />
    					</div>
    					<div style="margin: 2em 0 1em 0;">
    						<h3>Adress information</h3>
    					</div>
    					<div>
    						<span>Type</span>
    						<input name="typedomicile" type="checkbox" value="Domicile" > domicile
    						<input name="typefacturation" type="checkbox" value="facturation" > facturation
    						<input name="typecourrier" type="checkbox" value="courrier" > courrier
    						<input name="typeadresse" type="checkbox" value="adresse" > adresse
    					</div>
    					<div>
    						<span>Number</span>
    						<input name="numero" type="text" class="textbox"  />
    					</div>
    					<div>
    						<span>Street</span>
    						<input name="rue" type="text" class="textbox"  />
    					</div>
    					<div>
    						<span>Postal Code</span>
    						<input name="cp" type="text" class="textbox"  />
    					</div>
    					<div>
    						<span>Town</span>
    						<input name="ville" type="text" class="textbox"  />
    					</div>
    					<div style="height:1em;">
    					</div>   			
    					<div>
    						<input type="submit" value="Submit">
    					</div>
    				</form>
    			</div>
    		</div>
			<div class="clearfix"></div>
		</div>
	</div>
{% endblock %}