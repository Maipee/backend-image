                  <div class="x_content">
                    <p class="text-muted font-13 m-b-30">                     
                    </p>
                    <table id="datatable" class="table table-striped table-bordered">
                      <thead>
                        <tr>
                          <th>Label</th>
                          <th>Description</th>
                          <th>Ref</th>
                          <th>Price</th>
                          <th>Picture</th>
                          <th>Code TVA</th>
                          <th>Deleted</th>
                          <th>Stock</th>
