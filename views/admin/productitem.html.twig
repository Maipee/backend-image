                    {% if products is defined %}
                    {% for product in products %}
                    <form class="form-horizontal form-label-left" action="/admin/product/update/{{ product.id }}" method="post">

                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Identifiant (ID) </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                          <input type="text" class="form-control" disabled="disabled" placeholder="Identifiant" value="{{ product.id }}">
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Libellé (LABEL)</label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                          <input type="text" name="label" class="form-control" disabled="disabled" placeholder="Libellé"  value="{{ product.label }}">
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Description (DESCRIPTION) </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                          <input type="text" name="description" class="form-control" disabled="disabled" placeholder="Description"   value="{{ product.description }}">
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Prix unitaire (PRICE) </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                          <input type="text" name="price" class="form-control" disabled="disabled" placeholder="Prix unitaire"   value="{{ product.price }}">
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Référence (REF) </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                          <input type="text" name="ref" class="form-control" disabled="disabled" placeholder="Référence"   value="{{ product.ref }}">
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Image (PICTURE) </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                          <input type="text" name="picture" class="form-control" disabled="disabled" placeholder="Image"   value="{{ product.picture }}">
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Code TVA (IDVAT) </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                          <input type="text" name="idvat" class="form-control" disabled="disabled" placeholder="Code TVA"   value="{{ product.idvat }}">
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Quantité (STOCK) </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                          <input type="text" name="stock" class="form-control" disabled="disabled" placeholder="Quantité" value="{{ product.stock }}">
                        </div>
                      </div>
                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Inactif (DELETED) </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
                          <input type="text" name="deleted" class="form-control" disabled="disabled" placeholder="Inactif" value="{{ product.deleted }}">
                        </div>
                      </div>
                      <div class="ln_solid"></div>
                      <div class="form-group">
                        <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">
                          <button id="editbtn" type="submit" class="btn btn-primary">Edit</button>
                          <button id="submitbtn" type="submit" disabled="disabled" class="btn btn-success">Submit</button>
                        </div>
                      </div>

                    </form>
                    {% endfor %}
                    {% else %}
                    <form class="form-horizontal form-label-left" action="/admin/product/add" method="post">

                      <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12">Identifiant (ID) </label>
                        <div class="col-md-9 col-sm-9 col-xs-12">
