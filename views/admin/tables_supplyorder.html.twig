{% extends 'admin/base.html.twig' %}
{% block centre %}

        <!-- page content -->
        <div class="right_col" role="main">
          <div class="">
            <div class="page-title">
              <div class="title_left">
                <h3>Tables <small>Some examples to get you started</small></h3>
              </div>

              <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                    </span>
                  </div>
                </div>
              </div>
            </div>

            <div class="clearfix"></div>

            <div class="row">
             


              

             

              <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                  <div class="x_title">
                    <h2>Table des commandes</h2>
                    <ul class="nav navbar-left ">
                    Filtrer par date : {{ now|date("m/d/Y") }}
                    <li>
                        <div class="input-prepend input-group">
                                      <span class="add-on input-group-addon"><i class="glyphicon glyphicon-calendar fa fa-calendar"></i></span>
                                      <form action="/admin//orders/list.html" method="post">
                                      <input type="text" style="width: 200px" name="reservation" id="reservation" class="form-control" value="12/01/2016 - {{ "now"|date("m/d/Y") }}">
                                      
                                     
                        </div>
                        <input type="submit" value="Filtrer">
                    </li>
                    
                    </ul>
                    <ul class="nav navbar-right panel_toolbox">
                    
                      <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                      </li>
                      <li class="dropdown">
                      
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                        
                      </li>
                      <li><a href="/admin/product/add" class="close-link" title=""  data-toggle="tooltip" data-placement="left" data-original-title="Ajouter un produit dans la base de donnée"><i class="fa fa-plus"></i></a>
                      </li>
                    </ul>
                    <div class="clearfix"></div>
                  </div>
                  <div class="x_content">
                  {%  if orders is defined %}
                    <table class="table table-hover">
                      <thead>
                        <tr>
                          <th>id</th>
                          <th>idproduct</th>
                          <th>quantité</th>
                       
                          <th>date reçu</th>
                          <th>id fournisseur</th>
                          <th>quantité commande</th>
                          <th>date d'entrée</th>
                          <th>delai de livraison</th>
                          
                          
                          
                        </tr>
                      </thead>
                      
                       
                      
						{% for ord in orders %}
                    
                      <tbody>
						                     
                        <tr>
                      
                          <th scope="row">{{ ord.id }}</th>
                         
                          <td>{{ ord.idproduct }}</td>
                          <td>{{ ord.qte }}</td>
                          <td>{{ ord.receiptdate }}</td>
                          <td>{{ ord.idsupplier }} €</td>
                          <td>{{ ord.oderquty }}</td>
                          <td>{{ ord.oderdate }}</td>
                          <td>{{ ord.delay }}</td>
                    
                           
                        </tr>
                       
                      </tbody>
                      
                       {% endfor %}
                       
                         
                      
                    </table>
				  {% else %}
				  Il n'y a pas d'element encore dans la base de donnée
				  
				  {% endif %}
				  <br />
				  <a href="/admin/product/add"><input type="button" class="btn btn-dark" value="Ajouter une commande"></a>
                  </div>
                </div>
              </div>


              

              <div class="clearfix"></div>
              
              
              
              
              

            </div>
          </div>
        </div>
        <!-- /page content -->
{% endblock %}
